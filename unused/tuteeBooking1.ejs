<body>
<h3 class="header">
    Booking from <%= userDetailsName.userName %>
</h3>
<div class="ui divider"></div>
<div class="ui grid">
    <div class="two wide column">
        <div class="ui small image">
            <img src="http://style.anu.edu.au/_anu/4/images/placeholders/person.png"/>
        </div>
    </div>
    <div class="fourteen wide column">
        <p>Tutor Name: <%= tutor %> </p>
        <p>Subject: <%= subject %> </p>
        <p>Date:
            <%
            Clickdate = new Date(time);
            Clickdate.setTime(Clickdate.getTime() + Clickdate.getTimezoneOffset() * 60 * 1000);
            %>
            <%= Clickdate %></p>
        <p>Location: </p>
        <p>Requirements specified:</p>
        <p>Attachment: </p>
    </div>
</div>
<div class="ui grid">
    <div class="right floated five wide column">
        <button class="ui positive right labeled icon button" onclick="submition()">
            submit
            <i class="info icon"></i>
        </button>
        <button class="ui black deny button">
            Close
        </button>

    </div>
</div>
</body>

<script>
