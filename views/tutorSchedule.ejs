<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 80%;

        }

        td, th {
            border: 1px solid #dddddd;
            text-align: center;
            padding: 8px;
            width: 10%;
            height: 60px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .available {
            background-color: #4CAF50;
        }

        .booked {
            background-color: blue;
        }
    </style>
</head>
<body>
<div style="overflow-x:auto;">
<table id="scheduleTable" class= "calendar", align="center">
    <caption><%= userName%>'s week schedule<br></caption>

    <tr>
        <th>Time</th>
        <th>Monday</th>
        <th>Tuesday</th>
        <th>Wednesday</th>
        <th>Thursday</th>
        <th>Friday</th>
        <th>Saturday</th>
        <th>Sunday</th>
    </tr>

</table>
</div>

</body>
<script>

    const cale = document.getElementsByClassName("calendar")[0];
    for (i = 8; i < 23; i++){
        const newRow = document.createElement('tr');
        const fsttd = document.createElement('td');
        fsttd.innerHTML = i + ':00';
        newRow.appendChild(document.createElement('td').appendChild(fsttd));

       for(j = 1; j <8; j++){
            const newtd = document.createElement('td');
            newtd.id = j + "." + i;
            newtd.className = "empty";
            newtd.innerHTML = ".."
            newRow.appendChild(newtd);
        }
        cale.appendChild(newRow);
    }

    const AvailableCell = [<%=idAvailable%>];
    console.log(AvailableCell);
    AvailablesCell = AvailableCell.map(String);
    console.log(AvailablesCell);

    for(i = 0; i < AvailableCell.length; i++) {
        document.getElementById(AvailableCell[i]).className = 'available';

    }


    const BookedCell = [<%=idBooked%>];
    console.log(BookedCell[1]);

    for(i = 0; i < BookedCell.length; i++) {
        document.getElementById(BookedCell[i]).className = 'booked';
    }

    const info = [<%course%>];
    console.log("course " + info);

</script>
</html>
